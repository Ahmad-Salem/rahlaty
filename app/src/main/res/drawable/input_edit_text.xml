<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#aeaeae"/>
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item
                    android:left="0dp"
                    android:right="2dp"
                    android:top="0dp"
                    android:bottom="2dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                       android:shape="oval">
                    <stroke
                            android:width="10dp"
                            android:color="#00CC96"/>
                    <solid android:color="#00CC96"/>
                </shape>
            </item>
            <item>

                <bitmap android:gravity="center_horizontal"  android:src="@drawable/call_icon" />

            </item>
        </layer-list>
    </item>

</selector>