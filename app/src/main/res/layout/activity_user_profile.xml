<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textDirection="ltr"
        android:layoutDirection="ltr"
        xmlns:design="http://schemas.android.com/apk/res-auto"
        tools:context=".user_profile">

    <android.support.v7.widget.Toolbar
            android:id="@+id/profile_user_id"
            android:layoutDirection="ltr"
            android:textDirection="ltr"
            android:background="@drawable/side_nav_bar"
            design:titleTextColor="@color/colorPrimary"
            app:title=" "
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <TextView
                android:id="@+id/toolbar_title_reg_add_offer_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Account Profile"
                android:textSize="15sp"
                android:textColor="@color/white"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center" />
    </android.support.v7.widget.Toolbar>


    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            android:layout_marginTop="25dp"
            android:id="@+id/message_logo"
            android:layout_below="@+id/profile_user_id"
            android:layout_centerHorizontal="true"
    />


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/message_logo">
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center|top"
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/message_logo"
                card_view:cardCornerRadius="4dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Account Information"
                        android:id="@+id/Title_user"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:layout_centerHorizontal="true"
                />


                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Unique Name:"
                          android:id="@+id/name_label"
                          android:layout_marginTop="20dp"
                          android:textSize="15sp"
                          android:textStyle="bold"
                          android:layout_below="@+id/Title_user"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Ahmed Salem Musallam"
                          android:id="@+id/name_value"
                          android:layout_marginTop="20dp"
                          android:textSize="15sp"
                          android:textStyle="bold"
                          android:layout_toRightOf="@+id/name_label"
                          android:layout_marginLeft="10dp"
                          android:textColor="@color/colorPrimaryDark"
                          android:layout_below="@+id/Title_user"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Password:"
                          android:id="@+id/password_label"
                          android:layout_marginTop="20dp"
                          android:textSize="15sp"
                          android:textStyle="bold"
                          android:layout_below="@+id/name_label"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="123456"
                          android:id="@+id/password_value"
                          android:layout_marginTop="20dp"
                          android:textSize="15sp"
                          android:textStyle="bold"
                          android:layout_below="@+id/name_label"
                          android:layout_toRightOf="@+id/password_label"
                          android:layout_marginLeft="40dp"
                          android:textColor="@color/colorPrimaryDark"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Telephone:"
                          android:id="@+id/phone_label"
                          android:layout_marginTop="20dp"
                          android:textSize="15sp"
                          android:textStyle="bold"
                          android:layout_below="@+id/password_label"
                />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="01030442242"
                          android:id="@+id/phone_value"
                          android:layout_marginTop="20dp"
                          android:textSize="15sp"
                          android:textStyle="bold"
                          android:layout_below="@+id/password_label"
                          android:layout_toRightOf="@+id/password_label"
                          android:layout_marginLeft="40dp"
                          android:textColor="@color/colorPrimaryDark"
                />

                <Button
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:id="@+id/Edit_btn"
                        android:text="Edit Information"
                        android:background="@drawable/rounded_btn"
                        android:layout_below="@+id/phone_value"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="20dp"

                />
                <Button
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:id="@+id/delete_btn"
                        android:text="Logout"
                        android:background="@drawable/rounded_btn"
                        android:layout_below="@+id/Edit_btn"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="20dp"

                />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>


</RelativeLayout>