<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:design="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register_new_user">

    <android.support.v7.widget.Toolbar
            android:id="@+id/new_user_id"
            android:layoutDirection="ltr"
            android:textDirection="ltr"
            android:background="@drawable/side_nav_bar"
            design:titleTextColor="@color/colorPrimary"
            app:title=" "
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <TextView
                android:id="@+id/toolbar_title_reg_add_offer_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User Registeration"
                android:textSize="15sp"
                android:textColor="@color/white"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center" />
    </android.support.v7.widget.Toolbar>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            android:layout_marginTop="25dp"
            android:id="@+id/message_logo"
            android:layout_below="@+id/new_user_id"
            android:layout_centerHorizontal="true"
    />


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/message_logo">
        <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layoutDirection="ltr"
                android:textDirection="ltr"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center|top"
                android:layout_width="300dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/message_logo"
                card_view:cardCornerRadius="4dp">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:focusableInTouchMode="true"
            >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New User Or "
                        android:id="@+id/Title_user"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:layout_toRightOf="@+id/Title_user"
                        android:id="@+id/Title_user1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textColor="#0078D7"
                        android:textStyle="bold"
                />
                <EditText
                        android:layout_marginTop="20dp"
                        android:id="@+id/user_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_person_black_24dp"
                        android:drawablePadding="5dp"
                        android:layout_below="@+id/Title_user"
                        android:hint="Enter Your Unique Name"
                        android:layout_marginBottom="20dp"
                        android:inputType="textPersonName" />

                <EditText
                        android:id="@+id/password_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                        android:drawablePadding="5dp"
                        android:hint="Enter Your Password"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@+id/user_name_edit_text"
                        android:inputType="textPassword" />

                <EditText
                        android:id="@+id/confirm_password_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="20dp"
                        android:hint="Confirm Your Password"
                        android:layout_below="@+id/password_edit_text"
                        android:inputType="textPassword" />

                <EditText
                        android:id="@+id/Telephone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                        android:drawablePadding="5dp"
                        android:layout_marginBottom="20dp"
                        android:hint="Enter Your Phone Number"
                        android:layout_below="@+id/confirm_password_edit_text"
                        android:inputType="phone" />

                <Button
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:id="@+id/send_btn"
                        android:text="Register Now"
                        android:background="@drawable/rounded_btn"
                        android:layout_below="@+id/Telephone_number"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_marginBottom="20dp"
                />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>


</RelativeLayout>