<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/first_fragment">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="00dp"
                    android:layout_height="200dp"
                    android:background="#eee"
                    android:id="@+id/layout1"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/background_details"
                        android:scaleType="fitXY"
                        android:id="@+id/trip_photo1"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Sharm Elshiekh"
                          android:layout_marginTop="70dp"
                          android:textColor="@color/white"
                          android:textSize="25dp"
                          android:id="@+id/city_text"
                          android:layout_centerHorizontal="true"
                          android:textStyle="bold"
                          android:shadowColor="#7F000000"
                          android:shadowDx="2"
                          android:shadowDy="2"
                          android:shadowRadius="1"
                />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/layout1"
                    android:id="@+id/rest_of_photos"
                    android:layout_marginTop="-70dp">
                <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="130dp"
                        android:paddingTop="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp"
                        android:background="@drawable/details_photo_shadow"
                        android:id="@+id/conteainer1"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:id="@+id/photo1"
                            android:src="@drawable/background_details"
                            android:scaleType="fitXY"
                    />
                    <TextView
                            android:id="@+id/trip_city1"
                            android:layout_marginTop="-30dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:textSize="10sp"
                            android:text="@string/country_name"
                            android:textColor="@color/accent_color"
                            android:layout_below="@+id/photo1"
                            android:background="@drawable/transparent"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="130dp"
                        android:id="@+id/conteainer2"
                        android:paddingTop="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp"
                        android:background="@drawable/details_photo_shadow"
                        android:layout_toRightOf="@+id/conteainer1"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:id="@+id/photo2"
                            android:src="@drawable/background_details"
                            android:scaleType="fitXY"
                    />

                    <TextView
                            android:id="@+id/trip_city2"
                            android:layout_marginTop="-30dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:textSize="10sp"
                            android:text="@string/country_name"
                            android:textColor="@color/accent_color"
                            android:layout_below="@+id/photo2"
                            android:background="@drawable/transparent"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:id="@+id/conteainer3"
                        android:paddingTop="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp"
                        android:background="@drawable/details_photo_shadow"
                        android:layout_toRightOf="@+id/conteainer2"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:id="@+id/photo3"
                            android:src="@drawable/background_details"
                            android:scaleType="fitXY"
                    />
                    <TextView
                            android:id="@+id/trip_city3"
                            android:layout_marginTop="-30dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:textSize="10sp"
                            android:text="@string/country_name"
                            android:textColor="@color/accent_color"
                            android:layout_below="@+id/photo3"
                            android:background="@drawable/transparent"/>
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rest_of_photos"
                    android:id="@+id/under_rest_of_photos"
                    android:layout_marginTop="10dp">
                <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="130dp"
                        android:paddingTop="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp"
                        android:background="@drawable/details_photo_shadow"
                        android:id="@+id/under_conteainer1"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:id="@+id/under_photo1"
                            android:src="@drawable/background_details"
                            android:scaleType="fitXY"
                    />
                    <TextView
                            android:id="@+id/under_trip_city1"
                            android:layout_marginTop="-30dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:textSize="10sp"
                            android:text="@string/country_name"
                            android:textColor="@color/accent_color"
                            android:layout_below="@+id/under_photo1"
                            android:background="@drawable/transparent"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="130dp"
                        android:id="@+id/under_conteainer2"
                        android:paddingTop="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp"
                        android:background="@drawable/details_photo_shadow"
                        android:layout_toRightOf="@+id/under_conteainer1"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:id="@+id/under_photo2"
                            android:src="@drawable/background_details"
                            android:scaleType="fitXY"
                    />

                    <TextView
                            android:id="@+id/under_trip_city2"
                            android:layout_marginTop="-30dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:textSize="10sp"
                            android:text="@string/country_name"
                            android:textColor="@color/accent_color"
                            android:layout_below="@+id/under_photo2"
                            android:background="@drawable/transparent"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:id="@+id/under_conteainer3"
                        android:paddingTop="1dp"
                        android:paddingRight="1dp"
                        android:paddingBottom="1dp"
                        android:background="@drawable/details_photo_shadow"
                        android:layout_toRightOf="@+id/under_conteainer2"
                >
                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="130dp"
                            android:id="@+id/under_photo3"
                            android:src="@drawable/background_details"
                            android:scaleType="fitXY"
                    />
                    <TextView
                            android:id="@+id/under_trip_city3"
                            android:layout_marginTop="-30dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:textSize="10sp"
                            android:text="@string/country_name"
                            android:textColor="@color/accent_color"
                            android:layout_below="@+id/under_photo3"
                            android:background="@drawable/transparent"/>
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Book Now"
    android:layout_gravity="bottom"
    android:background="@drawable/rectangle_button"
    android:textColor="@color/white"
    android:id="@+id/book_now"/>
</android.support.design.widget.CoordinatorLayout>